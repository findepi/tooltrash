#!/bin/bash

set -euo pipefail

origin=origin
branch="$(git symbolic-ref --short HEAD)"
head="$(git rev-parse HEAD)"

if git rev-parse HEAD@{u} >/dev/null; then
    upstream="$(git rev-parse HEAD@{u})"
else
    guessed_upstream_branch="${origin}/${branch}"
    echo "Upstream branch not set, guessing it's ${guessed_upstream_branch}" >&2
    upstream="$(git rev-parse "${guessed_upstream_branch}")"
fi

if [ "${head}" = "${upstream}" ]; then
    # Pushed, safe to delete locally
    set -x
    git checkout master
    git branch -D "${branch}"
    exit
else
    progname="$(basename "$0")"
    echo "${progname}: Error: Branch ${branch} does not appear to be pushed externally." >&2
    echo "${progname}: Error: Unsafe to delete. Use can delete it with:" >&2
    echo "git checkout master && git branch -D '${branch}'" >&2
    exit 1
fi

